<div class="container d-flex flex-column align-items-center mt-4">
    <%= form_with model: @operation, data: { turbo: false }, class: "" do |form| %>

    <div class="form-group mt-2">
        <%= form.label :name, class: "form-label fs-5" %>
        <%= form.text_field :name, autofocus: true, class: "form-control", required: true %>
    </div>

    <div class="form-group mt-2">
        <%= form.label :amount, class: "form-label fs-5" %>
        <%= form.number_field :amount, class: "form-control", required: true %>
    </div>

    <div class="form-group mt-2">
        <%= form.label :group, class: "form-label fs-5" %>
        <%= select("group", "group_id", Group.all.collect { |g| [ g.name, g.id ] }, { include_blank: false }, multiple: true, size: 3, class: "form-control", required: true) %>
    </div>

    <%= form.submit "Save", class: "btn btn-success mt-4 w-100 text-center" %>
    <% end %>
</div>