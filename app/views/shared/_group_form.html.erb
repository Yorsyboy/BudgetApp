<div class="mt-5">
    <%= form_with model: @group, data: { turbo: false }, class: "container form margin-y border-y" do |form| %>

    <div class="form-group mt-2">
        <%= form.label :name, class: "form-label fs-5" %>
        <%= form.text_field :name, autofocus: true, class: "form-control p-2", required: true %>
    </div>

    <div class="form-group mt-2">
        <%= form.label :icon, class: "form-label fs-5" %>
        <%= form.text_field :icon, class: "form-control p-2", required: true %>
    </div>

    <%= form.submit "Save", class: "btn btn-success mt-2" %>
    <% end %>
</div>